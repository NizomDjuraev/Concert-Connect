{
	"include": [
		"back/**/*",
		"**/*.json"
	],
	"compilerOptions": {
		"outDir": "out",
		// enable top-level await and import/export syntax
		"target": "es2017",
		"moduleResolution": "node16",
		"module": "esnext",
		// enable type checking
		"strict": true,
		// to make jest happy
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}